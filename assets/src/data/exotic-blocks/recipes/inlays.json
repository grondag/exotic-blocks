<@pp.dropOutputFile />
<#list shape_blocks as block>
<#list inlays as inlay>
<@pp.changeOutputFile name=block.name + "_" + inlay.prefix + "_" + inlay.baseName + ".json" />
{
  "type": "minecraft:crafting_shaped",
<#if inlay.outputCount == "8">
  "group": "${inlay.prefix}_${inlay.baseName}",
<#else>
  "group": "${inlay.baseName}",
</#if>
  "pattern": [
<#if inlay.outputCount == "8">
    "###",
    "#G#",
    "###"
<#else>
    " G ",
    "G#G",
    " G "
</#if>
  ],
  "key": {
    "#": {
<#if inlay.useRawInput == "Y">
      "item": "${block.mod}:${block.name}"
<#elseif inlay.outputCount == "8">
      "item": "exotic-blocks:${block.name}_${inlay.baseName}"
<#else>
      "item": "exotic-blocks:${block.name}_${inlay.baseName[5..]}"
</#if>
    },
    "G": {
      "item": "${inlay.glowItem}"
    }
  },
  "result": {
<#if inlay.outputCount == "8">
    "item": "exotic-blocks:${block.name}_${inlay.prefix}_${inlay.baseName}",
<#else>
    "item": "exotic-blocks:${block.name}_${inlay.baseName}",
</#if>
    "count": ${inlay.outputCount}
  }
}
</#list>
</#list>
